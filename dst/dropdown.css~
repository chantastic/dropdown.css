/*
 * dropdown
 */

.dropdown {
    position: relative;
}

.dropdown[aria-expanded=true]::after {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    width: 100%;
    height: 100%;

    content: '';
}


.dropdown[aria-expanded=false] .dropdown-content {
    display: none;
}

.dropdown[aria-expanded=true] .dropdown-content {
    z-index: 1;

    display: block;
}

.dropdown-trigger {
    /* relative should be here instead */
    cursor: pointer;
}

.dropdown-trigger {
  border: 1px solid blue;
}

.dropdown-trigger:focus {
  border-color: red;
}

.dropdown[aria-expanded=true] .dropdown-trigger {
    position: relative;
    z-index: 1;
}

.dropdown-content {
    position: absolute;
    z-index: 1;

    margin-top: 5px;
    padding: 10px;
}

/* styles */
.dropdown-content {
    border: 1px solid #dbdbdb;
    border-bottom-color: #c2c2c2;
    border-radius: 3px;
    background: white;
    box-shadow: 0 1px 6px rgba(0,0,0,.15);
}

.dropdown-content-header {
    padding-bottom: 10px;

    text-align: center;

    border-bottom: 1px solid #dbdbdb;
}

.dropdown-content-footer {
    padding-top: 10px;

    text-align: right;

    border-top: 1px solid #dbdbdb;
}

.dropdown-content-dismiss:before {
    font-weight: bold;
    font-style: normal;

    display: block;

    padding: 10px;

    content: '\00d7';
    cursor: pointer;
}

.dropdown-content-dismiss {
  position: absolute;
  top: 0;
  right: 0;

  border: none;
  background: none;
}

.dropdown-content-hr {
    border: none;
    border-bottom: 1px solid #dbdbdb;
}

.dropdown-action {
